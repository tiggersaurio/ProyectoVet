@model ProyectoVet.Models.Mascota

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <br><br>
    <center>
        <div class="card" style="width: 30rem; border-radius: 10px;">
            <center>
                @if (Convert.ToString(Html.DisplayFor(model => model.Especie)) == "Anfibio")
                {
                    <img  alt="Foto" style="width: 100px; margin: 10px;" src="~/Content/img/tipo/Anfibio.png" />
                }
                else if (Convert.ToString(Html.DisplayFor(model => model.Especie)) == "Ave")
                {
                    <img  alt="Foto" style="width: 100px; margin: 10px;" src="~/Content/img/tipo/Ave.png" />
                }
                else if (Convert.ToString(Html.DisplayFor(model => model.Especie)) == "Gato")
                {
                    <img  alt="Foto" style="width: 100px; margin: 10px;" src="~/Content/img/tipo/Gato.png" />
                }
                else if (Convert.ToString(Html.DisplayFor(model => model.Especie)) == "Perro")
                {
                    <img  alt="Foto" style="width: 100px; margin: 10px;" src="~/Content/img/tipo/Perro.png" />
                }
                else if (Convert.ToString(Html.DisplayFor(model => model.Especie)) == "Pez")
                {
                    <img  alt="Foto" style="width: 100px; margin: 10px;" src="~/Content/img/tipo/Pez.png" />
                }
                else if (Convert.ToString(Html.DisplayFor(model => model.Especie)) == "Reptil")
                {
                    <img  alt="Foto" style="width: 100px; margin: 10px;" src="~/Content/img/tipo/Reptil.png" />
                }
                else if (Convert.ToString(Html.DisplayFor(model => model.Especie)) == "Roedor")
                {
                    <img  alt="Foto" style="width: 100px; margin: 10px;" src="~/Content/img/tipo/Roedor.png" />
                }
            </center>
            <div class="card-body">
                <br>
                <h2 style="font-weight: bold;">@Html.DisplayFor(model => model.Nombres)</h2>
                <h3 style="font-weight: bold;">@Html.DisplayFor(model => model.Especie)</h3>
                <h4>@Html.DisplayFor(model => model.cliente.Nombres) @Html.DisplayFor(model => model.cliente.Apellidos)</h4>
                <h4>@Html.DisplayFor(model => model.cliente.Telefono)</h4>
                <br><br><br>
                <h6>Lupan Veterinarios - Manizales</h6>
            </div>
        </div>
    </center>
</body>
</html>
