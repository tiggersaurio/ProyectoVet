@model ProyectoVet.Models.Respuesta

@{
    Layout = null;
}

<div class="contenedorModal">
    <center>
        <br />
        <center>
            <table>
                <tr>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                    </td>
                    <td><p class="tituloIniciosesion">Edita tu Respuesta</p></td>
                </tr>
            </table>
        </center>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RespuestaId)
            @Html.HiddenFor(model => model.ForoId)
            @Html.HiddenFor(model => model.Documento)
            @Html.HiddenFor(model => model.Usuario)
            @Html.HiddenFor(model => model.Fecha)
            @Html.HiddenFor(model => model.Hora)

            @Html.EditorFor(model => model.RespuestaForo, new { htmlAttributes = new { @class = "form-control formForo", rows = "5" } })
            @Html.ValidationMessageFor(model => model.RespuestaForo, "", new { @class = "text-danger" })


            <hr />
            <input type="submit" value="Guardar" class="btn btn-warning btnRegistro btnIniciar glyphicon glyphicon-plus" />

            <br />
        }
    </center>
</div>