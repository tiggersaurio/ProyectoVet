@model ProyectoVet.Models.Foro

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <div class="contenedorModal">
        @Html.ActionLink("X", "IndexForo", new { }, new { @class = "btn btn-light contenedorCerrar" })
        <center>


            <h2>Nuevo Foro</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ForoId)
                @Html.HiddenFor(model => model.Usuario)
                @Html.HiddenFor(model => model.Documento)
                @Html.HiddenFor(model => model.Fecha)
                @Html.HiddenFor(model => model.Hora)
                @Html.HiddenFor(model => model.Seccion)
        <table class="table-condensed">
            <tr>
                <td>
                    <p><b>Nombre</b></p>
                </td>
                <td>
                    @Html.EditorFor(model => model.NombreForo, new { htmlAttributes = new { @class = "form-control formForo" } })
                    @Html.ValidationMessageFor(model => model.NombreForo, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <p><b>Describe tu foro</b></p>
                </td>
                <td>
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control formForo", rows = "5" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                    <input type="submit" style="width:100%;" value="Guardar" class="btn btn-success" />
                </td>
            </tr>
        </table>
                <hr />
                <br />

            }
        </center>
    </div>
    </body>
</html>
